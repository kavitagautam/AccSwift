{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@accSwift-modules/*": ["app/modules/*"],
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@core/*": ["app/core/*"],
      "@lib/*": ["./../lib/*"],
      "@shared/*": ["app/shared/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["config/*"],
      "@accSwiftForms/*": ["app/modules/accswift-forms/*"],
      "@accSwiftShared/*": ["app/modules/accswift-shared/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["es2018", "dom"]
  }
}
